<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckoutFormActivity">
<android.support.design.widget.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColorHint="@color/g">

    <EditText
        android:id="@+id/editText6"
        android:fontFamily="@font/montserrat"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your First Name"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/nexttoblack" />
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText7"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Last Name"
            android:inputType="textPersonName"
            android:fontFamily="@font/montserrat"

            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText8"
            android:layout_width="309dp"
            android:fontFamily="@font/montserrat"


            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Address"
            android:inputType="textPersonName"
            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText9"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"

            android:ems="10"
            android:hint="Enter Your Pin Code"
            android:inputType="textPersonName"
            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText10"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your City"
            android:fontFamily="@font/montserrat"

            android:inputType="textPersonName"
            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText11"
            android:layout_width="373dp"
            android:fontFamily="@font/montserrat"

            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address Line 1"
            android:inputType="textPersonName"
            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText12"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Mobile No."
            android:fontFamily="@font/montserrat"

            android:inputType="textPersonName"
            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText13"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"

            android:hint="Enter Your Landline Number"
            android:inputType="textPersonName"
            android:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/g">

        <EditText
            android:id="@+id/editText14"
            android:layout_width="360dp"
            android:layout_height="35dp"

            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Enter Your Billing Location"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#07000000">
    </TableRow>

    <Button
        android:id="@+id/buttoncheckout"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/butonborder"
        android:fontFamily="@font/montserrat"
        android:text="Place Order"
        android:textColor="@color/g" />
</LinearLayout>